post_install() {
    echo -e "\n** The files have been installed in /etc/skel/.config/astronvim/user/ and copied to ~/.config/astronvim/user/**\n"
    mkdir -p $HOME/.config/astronvim/user/ && cp /etc/skel/astronvim/user/init.lua $HOME/.config/astronvim/user/init.lua
}

post_upgrade() {
    echo -e "\n** The files have been installed in /etc/skel/.config/astronvim/user/ **\n"
}
